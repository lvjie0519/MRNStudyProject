<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".rn.MySecondRnActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试RN加载按钮"
            android:onClick="onClickRnLoadTestBtn"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="独立加载bundle"
            android:textAllCaps="false"
            android:onClick="onClickLoadJsBundle"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RN界面显示"
            android:textAllCaps="false"
            android:onClick="onClickShowRnView"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/layout_react"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

